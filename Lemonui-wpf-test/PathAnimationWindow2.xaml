            </WrapPanel>
            <Grid Grid.Row="1">
                <Canvas x:Name="cvsMain" Background="LightCyan">
                    <Path  x:Name="path1"  Stroke="LightGreen" StrokeThickness="20" StrokeLineJoin="Round"></Path>
                </Canvas>
                <StackPanel VerticalAlignment="Center">
                    <Button Content="Hello,wolrd" Width="150" Height="30"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Window>
