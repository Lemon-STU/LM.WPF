            <Grid Grid.Row="1" Margin="10">
                <Canvas x:Name="cvsMain" Background="LightCyan">
                    <Path  x:Name="path1"  Stroke="#4E6B7C" StrokeThickness="2" StrokeLineJoin="Round"></Path>
                </Canvas>
                <StackPanel VerticalAlignment="Center" Visibility="Collapsed">
                    <Button Content="Hello,wolrd" Width="150" Height="30"/>
                </StackPanel>
            </Grid>
            
        </Grid>
